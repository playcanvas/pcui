{
    "compilerOptions": {
        "noImplicitAny": true,
        "allowJs": true,
        "target": "es6",
        "jsx": "react",
        "lib": [
            "es2019",
            "dom"
        ],
        "esModuleInterop" : true,
        "sourceMap": true,
        "moduleResolution": "node"
    },
    "typedocOptions": {
        "entryPoints": ["./src/index.ts"],
        "out": "typedocs",
        "readme": "none"
    },
    "include": ["./src/index.ts"],
    "exclude": ["node_modules/**/*", "node_modules"]
}
